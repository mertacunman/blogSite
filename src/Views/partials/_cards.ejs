<% const yukseklik = 900+index %> 


  <div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://source.unsplash.com/random/1280x<%=yukseklik%>  "  alt="Placeholder image"></img>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
    
      <div class="media-content">
        <p class="title is-4"><%-makale.title.rendered%> </p>
        
      </div>
    </div>

    <div class="content">
     
      <%- index == undefined ? makale.content.rendered : makale.excerpt.rendered.slice(0,60) %> 
       <% if (index !== undefined) { %>
        <a href="/blog/<%-makale.id %>">Devamını Oku</a>
       <% } %>
    </div>
   
  </div></div>

